{% extends 'Template.html.twig' %}

{% block title %}Facture index{% endblock %}

{% block body %}
    <h1>Facture index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Num_fac</th>
                <th>Montant_paye</th>
                <th>Montant_reste</th>
                <th>Nb_seance</th>
                <th>Nom_patologie</th>
                <th>Total</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for facture in factures %}
            <tr>
                <td>{{ facture.id }}</td>
                <td>{{ facture.numFac }}</td>
                <td>{{ facture.montantPaye }}</td>
                <td>{{ facture.montantReste }}</td>
                <td>{{ facture.nbSeance }}</td>
                <td>{{ facture.nomPatologie }}</td>
                <td>{{ facture.total }}</td>
                <td>
                    <a href="{{ path('facture_show', {'id': facture.id}) }}">show</a>
                    <a href="{{ path('facture_edit', {'id': facture.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('facture_new') }}">Create new</a>
{% endblock %}
